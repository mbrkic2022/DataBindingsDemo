<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBindingsDemo.MainPage"
             Title="Data Binding Basics">
    <ContentPage.Content>

        <ScrollView>
            <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            Margin="10">
                <Button
                x:Name="GreetMeBtn"
                Text="Say hello" 
                Clicked="GreetMeBtn_Clicked"/>
                <Label
                    x:Name="GreetingLbl"
                Text="Hello"/>
                <Entry
                    x:Name="NameEntry" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
